{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🌐 Launch Nuxt App",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "hidden": false,
        "group": "Development",
        "order": 1
      }
    },
    {
      "name": "🔧 Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "Development",
        "order": 2
      }
    },
    {
      "name": "🧪 Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache", "--no-coverage"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 1
      }
    },
    {
      "name": "🎯 Debug Current Jest Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache", "--no-coverage", "${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 2
      }
    },
    {
      "name": "🌍 Debug Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "Browser",
        "order": 1
      }
    },
    {
      "name": "🦊 Debug Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "Browser",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "🚀 Launch App + Chrome Debug",
      "configurations": ["🌐 Launch Nuxt App", "🌍 Debug Chrome"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Compound",
        "order": 1
      }
    }
  ]
}
