# SmartSurvey Pro - 環境變數範例
# 複製此檔案為 .env.local 並填入實際值

# ============================================
# 應用設定
# ============================================
NODE_ENV=development
BASE_URL=http://localhost:3000
APP_NAME="SmartSurvey Pro"

# ============================================
# 資料庫設定 (MongoDB Atlas)
# ============================================
# 格式: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/survey_db?retryWrites=true&w=majority

# MongoDB 連接配置
MONGODB_DB_NAME=survey_db
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# ============================================
# 快取設定 (Redis Cloud)
# ============================================
# 格式: redis://:<password>@<host>:<port>
REDIS_URL=redis://:password@redis-host.com:6379

# Redis 配置
REDIS_DB=0
REDIS_TTL_SESSION=604800  # 7 days in seconds
REDIS_TTL_CACHE=3600      # 1 hour in seconds

# ============================================
# 認證設定
# ============================================
# JWT 密鑰 (請使用強密碼，可用 openssl rand -base64 32 生成)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session 設定
SESSION_SECRET=your-session-secret-change-this
SESSION_NAME=survey_session
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# ============================================
# API 設定
# ============================================
API_BASE_URL=/api
API_VERSION=v1
API_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# 第三方服務
# ============================================
# OpenAI API (Phase 2+)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# Google OAuth (選用)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SendGrid 郵件服務 (選用)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@smartsurvey.pro
SENDGRID_FROM_NAME="SmartSurvey Pro"

# ============================================
# 雲端儲存 (Google Cloud Storage)
# ============================================
GCS_BUCKET_NAME=survey-uploads
GCS_PROJECT_ID=survey-builder
GCS_KEY_FILE_PATH=./service-account.json

# ============================================
# 監控與分析
# ============================================
# Sentry 錯誤追蹤 (選用)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Google Analytics (選用)
GA_TRACKING_ID=

# ============================================
# 功能開關
# ============================================
ENABLE_AI_FEATURES=false
ENABLE_TEAM_FEATURES=false
ENABLE_PAYMENT_FEATURES=false
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================
# 開發設定
# ============================================
# Nuxt DevTools
NUXT_DEVTOOLS=true

# 除錯模式
DEBUG=false
LOG_LEVEL=info  # error | warn | info | debug

# 熱重載
HMR_HOST=localhost
HMR_PORT=24678

# ============================================
# 部署設定 (Production)
# ============================================
# Cloud Run
CLOUD_RUN_SERVICE_NAME=survey-web
CLOUD_RUN_REGION=asia-east1

# Cloudflare
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# ============================================
# 備註
# ============================================
# 1. 所有包含 SECRET、KEY、PASSWORD 的變數都需要更改
# 2. 生產環境請使用 Secret Manager 管理敏感資訊
# 3. 不要將實際的 .env 檔案提交到版本控制
# 4. 定期更新密鑰和密碼